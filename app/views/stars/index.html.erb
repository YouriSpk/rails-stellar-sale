<div class="container mt-5">
  <div class="row">
    <% @stars.each do |star| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= link_to star_path(star), class: "card-link" do %>
            <img src="<%= 'https://imageio.forbes.com/specials-images/imageserve/61d4ded7a0cee3e8bd299df6/0x0.jpg?format=jpg&crop=3037,1424,x280,y381,safe&height=900&width=1600&fit=bounds' %>" class="card-img-top" alt="<%= star.initial_name %> Image">
            <div class="card-body">
              <h2 class="card-title"><%= star.initial_name %></h2>
              <p class="card-text"><strong>Distance (light years):</strong> <%= star.distance_from_earth_in_light_years %></p>
              <p class="card-text"><strong>Spectral Class:</strong> <%= star.spectral_class %></p>
              <p class="card-text"><strong>Price per day:</strong> <%= star.price %>â‚¬ </p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
